<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hackday.com.carhack.MainActivity$PlaceholderFragment">

    <SeekBar
        android:id="@+id/seekLeft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:max="100"
        android:progress="50" />

    <SeekBar
        android:id="@+id/seekRight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seekLeft"
        android:layout_marginTop="80dp"
        android:max="100"
        android:progress="50" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_clear_black_24dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/BackLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/BackRightButton"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:text="Back Right" />

        <Button
            android:id="@+id/BackLeftButton"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Back Left" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/AddEditLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/ForwardLayout"
        android:orientation="horizontal">

        <Button
            android:id="@+id/AddButton"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:text="Add" />

        <Button
            android:id="@+id/EditButton"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Edit" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ForwardLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/FleftButton"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:text="Forward Left" />

        <Button
            android:id="@+id/FrightButton"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Forward Right" />
    </RelativeLayout>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btn_addsecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekRight"
        android:text="+1s" />

    <TextView
        android:id="@+id/txt_secs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_addsecond"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="0s"
        android:textSize="20dp" />

</RelativeLayout>
